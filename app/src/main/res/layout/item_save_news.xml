<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/white">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_news"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@color/black"
        app:shapeAppearance="@style/roundedImageView" />

    <RelativeLayout
        android:layout_toEndOf="@+id/image_news"
        android:id="@+id/news_head_date_author_view"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text_headline_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:fontFamily="serif"
            android:text="Lorem ipsum dolor sit amet consectetur adi"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_date_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_headline_news"
            android:layout_marginVertical="4dp"
            android:fontFamily="sans-serif"
            android:text="14-10-01"
            android:textColor="#C1C0BF"
            android:textSize="12sp" /></RelativeLayout>


</RelativeLayout>
